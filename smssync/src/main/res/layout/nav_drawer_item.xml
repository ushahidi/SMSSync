<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_posts_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/activatedBackgroundIndicator"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nav_drawer_title"
        style="@style/NavDrawerItem" />

    <TextView
        android:id="@+id/nav_drawer_counter"
        style="@style/TextView.NavDrawerCounter"
        android:layout_alignBaseline="@+id/nav_drawer_title"
        android:layout_alignBottom="@+id/nav_drawer_title"
        android:layout_alignParentRight="true" />

</RelativeLayout>